                    OfficalPhone: officalPhone,
                    OfficalEmail: officalEmail,
                    OfficalAdress: officalAddress,
                    CompanyPhone: companyPhone,
                    CompanyPhone2: companyPhone2,
                    CompanyAdress: companyAddress,
                    CompanyAdress2: companyAddress2,
                    CompanyCity: companyCity,
                    CompanyDistrict: companyDistrict,
                    ZipCode: zipCode
                };


                console.log("Sonuç:", data);
                $.ajax({
                    type: 'POST',
                    url: '/Company/Create',
                    data: data,
                    success: function (result) {
                        console.log("Sonuç:", data);
                    },
                    error: function (xhr, status, error) {
                        console.log("Hata:", error);
                    }
                });
            });
        });

