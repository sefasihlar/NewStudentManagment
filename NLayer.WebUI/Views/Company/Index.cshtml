                var companyDistrict = document.querySelector('input[name="CompanyDistrict"]').value;
                var zipCode = document.querySelector('input[name="ZipCode"]').value;

                var data = {
                    CompanyName: companyName,
                    CompanyOffical: companyOffical,
                    CompanyTitle: companyTitle,
                    OfficalTCKN: officalTCKN,
                    OfficalName: officalName,
                    OfficalSurname: officalSurname,
