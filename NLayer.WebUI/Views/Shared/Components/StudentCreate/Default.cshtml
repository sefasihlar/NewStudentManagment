@model NLayer.Core.DTOs.StudentDtod.StudentDto
<div id="zoomupModal" class="modal animated zoomInUp custo-zoomInUp" role="dialog">
    <div class="modal-dialog modal-xl">
        <!-- Modal content-->
        <div class="modal-content ">
            <div class="modal-header">
                <h5 class="modal-title">Öğrenci Kayıt</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Student" asp-action="Create" method="post">
                    <div class="row">

                        <div class="col-6">
                            <h3><strong class="text-center">Öğrenci</strong></h3>
                            <div class="row mb-12">
                                <div class="col">
                                    <input type="text" asp-for="StudentIdentity" class="form-control" placeholder="TC Kimlik Numarası">
                                </div>
                            </div>
                            <br />
                            <div class="row mb-4">
                                <div class="col">
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Ad">
                                </div>
                                <div class="col">
                                    <input type="text" asp-for="SurName" class="form-control" placeholder="Soyad">
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col">
                                    <input type="text"  name="SchoolClass" class="form-control" placeholder="Sınıf">
                                </div>
                                <div class="input-group col">
                                    <div class="input-group-text">
                                        <i class="bi bi-house-door">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                                                <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146ZM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5Z" />
                                            </svg>
                                        </i>
                                    </div>
                                    <input type="text" class="form-control" asp-for="School" id="inlineFormInputGroupUsername" placeholder="Okul">
                                </div>
                            </div>
                            <div class="row mb-4 ">
                                <div class="col">
                                    @await Component.InvokeAsync("ClassList")
                                </div>

                                <div class="col">
                                    <select class="form-select" name="Gender" aria-label="Default select example">
                                        <option selected>--Cinsiyet--</option>
                                        <option value="True">Erkek</option>
                                        <option value="False">Kız</option>
                                    </select>
                                </div>

                            </div>
                            <br />
                            <h3><strong class="text-center">Kayıt Ödeme</strong></h3>
                            <div class="row mb-12">
                                <div class="col">
                                    <input type="text" name="Price" class="form-control" placeholder="Aylık fiyat">
                                </div>
                            </div>
                        </div>

                        <div class="col-6">
                            <h3><strong class="text-center">Veli</strong></h3>
                            <div class="row mb-12">
                                <div class="col">
                                    <input type="text" asp-for="GuardianIdentity" class="form-control" placeholder="TC Kimlik Numarası">
                                </div>
                            </div>
                            <br />
                            <div class="row mb-4">
                                <div class="col">
                                    <input type="text" asp-for="GuardianName" class="form-control" placeholder="Ad">
                                </div>
                                <div class="col">
                                    <input type="text" asp-for="GuardianSurName" class="form-control" placeholder="Soyad">
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="input-group col">
                                    <div class="input-group-text">
                                        <i class="bi bi-person">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                            </svg>
                                        </i>
                                    </div>
                                    <input type="text" asp-for="GuardianJob" class="form-control" id="inlineFormInputGroupUsername" placeholder="Mesleği">
                                </div>
                                <div class="input-group col">
                                    <div class="input-group-text">
                                        <i class="bi bi-telephone">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                                                <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                            </svg>
                                        </i>
                                    </div>
                                    <input type="text" asp-for="GuardianPhone" class="form-control" id="inlineFormInputGroupUsername" placeholder="Telefon">
                                </div>

                            </div>
                            <div class="row mb-4">
                            <div class="col-6">
                                <label class="visually-hidden"  for="inlineFormInputGroupUsername">Email</label>
                                <div class="input-group">
                                    <div class="input-group-text">
                                        <i class="bi bi-envelope">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                                            </svg>
                                        </i>
                                    </div>
                                    <input type="text" asp-for="GuardianEmail" class="form-control" id="inlineFormInputGroupUsername" placeholder="Email">
                                </div>
                            </div>
                            <div class="col-6">
                                <label class="visually-hidden" for="inlineFormInputGroupUsername">Durum</label>
                                <div class="input-group">
                                    <select class="form-select" asp-for="Condition" aria-label="Default select example">
                                        <option selected>--Durum--</option>
                                        <option value="True">Aktif</option>
                                        <option value="False">Pasif</option>
                                    </select>
                                </div>
                            </div>
                            </div>
                            <br />
                            <div class="row mb-4">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="exampleFormControlTextarea1">Adres</label>
                                        <textarea class="form-control" asp-for="Adress" id="exampleFormControlTextarea1" rows="3"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer md-button">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>