@model NLayer.Core.DTOs.StudentDtod.StudentDto
@{
    ViewData["Title"] = "PaymentView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="middle-content container-xxl p-0">

            <div class="row invoice layout-top-spacing layout-spacing">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                    <div class="doc-container">

                        <div class="row">

                            <div class="col-xl-9">

                                <div class="invoice-container">
                                    <div class="invoice-inbox">

                                        <div id="ct" class="">

                                            <div class="invoice-00001">
                                                <div class="content-section">

                                                    <div class="inv--head-section inv--detail-section">
                                                        <div class="col-sm-12 col-12 mr-auto">
                                                            <div class="d-flex justify-content-center align-items-center" style="height: auto;">
                                                                <img src="/cork-v3.8.0/Metaakdeniz.png" alt="company" style="width:40%">
                                                            </div>
                                                        </div>

                                                        <div class="row">

                                                            <div class="col-sm-6 col-12 mr-auto">
                                                                <br />
                                                                <div>
                                                                    <div class="d-flex">
                                                                        @if (Model.Gender == true)
                                                                        {
                                                                            <img class="company-logo" src="/cork-v3.8.0/boy-student.jpg" alt="company">
                                                                        }

                                                                        else
                                                                        {
                                                                            <img class="company-logo" src="/cork-v3.8.0/Girl-İcon.png" alt="company">
                                                                        }

                                                                        <h3 class="in-heading align-self-center">@Model.Name @Model.SurName</h3>
                                                                    </div>
                                                                    <p class="inv-street-addr mt-3">Okul: @Model.School</p>
                                                                    <p class="inv-email-address">Sınıf: @Model.SchoolClass</p>
                                                                </div>
                                                            </div>
                                                            <br />

                                                            <div class="col-sm-6 text-sm-end" style="margin-top:90px">
                                                                <p class="inv-street-addr mt-3">TCKN: @Model.StudentIdentity</p>
                                                               
                                                                    <span class="inv-date">
                                                                        Kayıt Tarihi: 
                                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar">
                                                                            <rect x="3" y="4" width="16" height="16" rx="2" ry="2"></rect>
                                                                            <line x1="16" y1="2" x2="16" y2="6"></line>
                                                                            <line x1="8" y1="2" x2="8" y2="6"></line>
                                                                            <line x1="3" y1="10" x2="21" y2="10"></line>
                                                                        </svg>
                                                                        @DateTime.Parse(Model.CreatedDate.ToString()).ToString("dd MMM yyyy")
                                                                    </span>
                                                         
                                                            </div>
                                                        </div>

                                                    </div>

                                                    <div class="inv--detail-section inv--customer-detail-section">

                                                        <div class="row">

                                                            <div class="col-xl-8 col-lg-7 col-md-6 col-sm-4 align-self-center">
                                                                <p class="inv-to">VELİ</p>
                                                            </div>

                                                            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 align-self-center order-sm-0 order-1 text-sm-end mt-sm-0 mt-5">
                                                                <h6 class=" inv-title"><strong>İLETİŞİM</strong></h6>
                                                            </div>

                                                            <div class="col-xl-8 col-lg-7 col-md-6 col-sm-4">
                                                                <p class="inv-street-addr"><strong>TCKN:</strong>@Model.GuardianIdentity</p>
                                                                <p class="inv-street-addr"><strong>Ad-Soyad:</strong> @Model.GuardianName @Model.GuardianSurName</p>
                                                                <p class="inv-street-addr"><strong>Meslek:</strong>@Model.GuardianJob</p>
                                                            </div>

                                                            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 col-12 order-sm-0 order-1 text-sm-end">
                                                                <p class="inv-street-addr"><strong>Telefon:</strong>@Model.GuardianPhone</p>
                                                                <p class="inv-street-addr"><strong>E-Posta:</strong> @Model.GuardianEmail</p>
                                                                <p class="inv-street-addr"><strong>Adres:</strong> @Model.Adress</p>
                                                            </div>
                                                        </div>

                                                    </div>

                                                    @await Component.InvokeAsync("ViewPayment")

                                                    <div class="inv--note">

                                                        <div class="row mt-4">
                                                            <div class="col-sm-12 col-12 order-sm-0 order-1">
                                                                <p>Not: Bizimle çalıştığınız için teşekkür eder, iyi çalışmalar dileriz.</p>
                                                            </div>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>

                                        </div>


                                    </div>

                                </div>

                            </div>

                            <div class="col-xl-3">

                                <div class="invoice-actions-btn">

                                    <div class="invoice-action-btn">
                                        <div class="row">
                                            <div class="col-xl-12 col-md-3 col-sm-6">
                                                <a href="javascript:void(0);" class="btn btn-primary btn-print action-print">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-printer align-middle me-2">
                                                        <polyline points="6 9 6 2 18 2 18 9"></polyline>
                                                        <path d="M18 13v3a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1v-3"></path>
                                                        <path d="M9 22V12h6v10"></path>
                                                    </svg>
                                                    Yazdır
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </div>

    </div>

    <!--  BEGIN FOOTER  -->
    <div class="footer-wrapper">
        <div class="footer-section f-section-1">
            <p class="">Copyright © <span class="dynamic-year">2022</span> <a target="_blank" href="https://designreset.com/cork-admin/">DesignReset</a>, All rights reserved.</p>
        </div>
        <div class="footer-section f-section-2">
            <p class="">Coded with <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg></p>
        </div>
    </div>
    <!--  END FOOTER  -->
</div>

