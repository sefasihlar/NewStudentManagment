@using NLayer.Core.DTOs.ClassDtos
@model List<ClassDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("ClassDetail")

<div id="content" class="main-content">
    <br />

    <div class="layout-px-spacing">
        <div class="col-lg-6">
            <button type="button" class="btn btn-info mt-5 mr-0" data-bs-toggle="modal" data-bs-target="#rotateleftModal">Sınıf Ekle</button>
        </div>
        <div id="rotateleftModal" class="modal animated rotateInDownLeft custo-rotateInDownLeft" role="dialog">
            <div class="modal-dialog modal-lg">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Sınıf Kayıt</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-controller="Class" asp-action="Create" method="post" enctype="multipart/form-data">
                            <div class="row mb-4">
                                <div class="col-6">
                                    <input type="text" name="Name" class="form-control" placeholder="Sınınf Adı">
                                </div>
                                <div class="col-6">
                                    <input type="text" Name="WeekCount" class="form-control" placeholder="Kaç Hafta">
                                </div>

                                <br />

                            </div>
                            <div class="row mb-4">
                                <div class="col-6">
                                    <select class="form-select" name="Condition" aria-label="Default select example">
                                        <option value="True">Aktif</option>
                                        <option value="False">Pasif</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <input type="file" name="file" class="form-control" placeholder="Resim Seç">
                                </div>
                            </div>

                            <br />
                            <div class="col-12">
                                <div class="form-check form-check-primary form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="DayIds" value="1" id="form-check-primary" checked="">
                                    <label class="form-check-label" for="form-check-primary">
                                        Pazartesi
                                    </label>
                                </div>

                                <div class="form-check form-check-info form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="DayIds" value="2" id="form-check-info" checked="">
                                    <label class="form-check-label" for="form-check-info">
                                        Salı
                                    </label>
                                </div>

                                <div class="form-check form-check-success form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="DayIds" value="3" id="form-check-success" checked="">
                                    <label class="form-check-label" for="form-check-success">
                                        Çarşamba
                                    </label>
                                </div>

                                <div class="form-check form-check-danger form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="DayIds" value="4" id="form-check-danger" checked="">
                                    <label class="form-check-label" for="form-check-danger">
                                        Perşembe
                                    </label>
                                </div>

                                <div class="form-check form-check-secondary form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="DayIds" value="5" id="form-check-secondary" checked="">
                                    <label class="form-check-label" for="form-check-secondary">
                                        Cuma
                                    </label>
                                </div>

                                <div class="form-check form-check-warning form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="DayIds" value="6" id="form-check-warning" checked="">
                                    <label class="form-check-label" for="form-check-warning">
                                        Cumartesi
                                    </label>
                                </div>

                                <div class="form-check form-check-dark form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="DayIds" value="7" id="form-check-dark" checked="">
                                    <label class="form-check-label" for="form-check-dark">
                                        Pazar
                                    </label>
                                </div>
                            </div>

                            <div class="modal-footer md-button">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        <br />
        <div class="table-responsive">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Sınıf</th>
                        <th scope="col">Ekleyen</th>
                        <th scope="col">Hafta</th>
                        <th class="text-center" scope="col">Durum</th>
                        <th class="text-center" scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="media">
                                    <div class="avatar me-2">
                                        <img alt="avatar" src="/cork-v3.8.0/Class-Foto/@item.ImageUrl" class="rounded-circle" />
                                    </div>
                                    <div class="media-body align-self-center">
                                        <h6 class="mb-0">@item.Name</h6>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="mb-0">CEO</p>
                                <span class="text-success">Management</span>
                            </td>
                            <td class="text-center">
                                <span class="badge badge-light-primary">@item.WeekCount</span>
                            </td>
                            @if (item.Condition)
                            {
                                <td class="text-center">
                                    <span class="badge badge-light-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                <td class="text-center">
                                    <span class="badge badge-light-danger">Pasif</span>
                                </td>
                            }

                            <td class="text-center">
                                <div class="action-btns">

                                    <a href="javascript:void(0);" class="action-btn btn-view bs-tooltip me-2" data-toggle="tooltip" data-placement="top" title="Görüntüle">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-eye"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                    </a>

                                    <a href="javascript:void(0);" itemid="@item.Id" class="action-btn btn-edit bs-tooltip me-2" data-toggle="modal" data-target="#rotateleftModal" data-bs-toggle="modal" data-bs-target="#rotateleftModal" data-placement="top" title="Düzenle">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                                    </a>



                                    <input type="hidden" value="@item.Id" asp-for="@item.Id" />
                                    <a href="/Class/Delete/@item.Id" class="action-btn btn-delete bs-tooltip" data-toggle="tooltip" data-placement="top" title="Sil">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                    </a>


                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

